<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PE_Mobile_APP.Views.CarDetails"
             Title="Car Details"
             Shell.BackgroundColor="#242527"
             >

    <StackLayout Padding="10">
        
        <Label Text="{Binding Make}" FontSize="18" FontAttributes="Bold" />
        <Image Source="{Binding ImageUrl}" Aspect="AspectFill" HeightRequest="300" HorizontalOptions="FillAndExpand" Margin="0, 10"/>

        <Label Text="{Binding Year, StringFormat='Bouwjaar: {0}'}" Margin="0, 10"/>


        <Label Text="{Binding Description}" Margin="0, 10"/>

        <Button Text="Fav" Clicked="Button_Clicked"></Button>


        <Button Text="Koop" Style="{StaticResource defaultButton}"  Clicked="OnBuyClicked" />

    </StackLayout>

</ContentPage>