<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PE_Mobile_APP.Views.CarDetails"
             Title="CarDetails">

    <StackLayout Padding="10">
        
        <Label Text="{Binding Make}" FontSize="18" FontAttributes="Bold" />
        <Image Source="{Binding ImageUrl}" Aspect="AspectFill" HeightRequest="380" HorizontalOptions="FillAndExpand" />
        <Label Text="{Binding Model}" />
        <Label Text="{Binding Year}" />

        
        <Label Text="{Binding Description}" />

        
        <Button Text="Koop" Clicked="OnBuyClicked" />
    </StackLayout>

</ContentPage>