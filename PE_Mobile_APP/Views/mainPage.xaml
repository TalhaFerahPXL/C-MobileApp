<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 xmlns:vm="clr-namespace:PE_Mobile_APP.ViewModels"
			 x:Class="PE_Mobile_APP.Views.AanmeldenPage"
			 x:DataType="vm:AanmeldenViewModel">

    <Grid RowDefinitions="Auto,*,Auto" ColumnDefinitions="*">

        
        <Image Source="main.jpg" Aspect="AspectFill" Grid.Row="0" Grid.Column="0" Grid.RowSpan="3"/>

      
        <Label Text="YOUR WORLD." TextColor="WhiteSmoke" FontSize="35" Margin="20, 20, 0, 0" Grid.Row="0" Grid.Column="0" HorizontalOptions="Start" VerticalOptions="Start" />

        
        <Label Text="MY BMW" TextColor="WhiteSmoke" FontSize="35" Margin="20, 0, 0, 0" Grid.Row="1" Grid.Column="0" HorizontalOptions="Start" VerticalOptions="Start" FontAttributes="Bold" FontFamily="sans-serif"/>

       
        <StackLayout Grid.Row="2" Margin="10" BackgroundColor="Transparent" VerticalOptions="End">
            <Button Text="AANMELDEN" BackgroundColor="WhiteSmoke" TextColor="Black" Grid.Column="0" CornerRadius="0" FontFamily="sans-serif" Clicked="Button_Clicked"/>
            <Button Text="REGISTREREN" Grid.Column="1" BackgroundColor="Transparent" BorderWidth="2" BorderColor="WhiteSmoke" TextColor="WhiteSmoke" CornerRadius="0" Margin="0, 10" Clicked="Button_Clicked_1"/>
        </StackLayout>
    </Grid>

</ContentPage>
